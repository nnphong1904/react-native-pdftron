<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomPDFTronAppTheme" parent="PDFTronThemeBase">
        <item name="pt_bottom_bar_style">@style/BottomBarTheme</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarButtonNavigationStyle</item>
        <item name="pt_toolbar_switcher_button_style">@style/ToolbarSwitcherButtonTheme</item>
        <item name="pt_toolbar_style">@style/ToolbarStyle</item>
        <item name="pt_annotation_toolbar_style">@style/AnnotationToolbarTheme</item>
        <item name="actionOverflowButtonStyle">@style/ActionModeOverflowButtonStyle</item>
        <item name="pt_toolbar_theme">@style/ToolbarTheme</item>
        <item name="custom_bookmarks_tab_layout">@style/BookmarksTabLayoutStyle</item>
        <item name="sticky_note_presets">@array/custom_presets</item>
    </style>
    <style name="PDFTronAppTheme" parent="PDFTronAppThemeBase">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/color_secondary</item>
        <item name="android:textViewStyle">@style/defaultTextViewStyle</item>
        <item name="windowActionModeOverlay">true</item>
	</style>
    <style name="defaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/axiforma_medium</item>
    </style>
    <style name="CustomPresetStyle1">
        <item name="annot_color">@color/yellow</item>
        <item name="annot_icon">Comment</item>
    </style>
    <style name="PTToolbarSwitcherDialogTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="textColor">@color/neutral_60</item>
        <item name="iconColor">@color/neutral_60</item>
        <item name="backgroundColor">@color/white</item>
        <item name="selectedItemBackgroundColor">@color/neutral_20</item>
        <item name="selectedIconColor">@color/color_secondary</item>
    </style>
    <style name="BookmarksTabLayoutStyle" parent="BaseBookmarksTabLayoutStyle">
        <item name="tabBackgroundDialog">@color/white</item>
        <item name="tabTintColorDialog">@color/neutral_60</item>
        <item name="tabTintSelectedColorDialog">@color/color_secondary</item>
        <item name="tabTintSelectedColorSheet">@color/color_secondary</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/neutral_60</item>
        <item name="colorControlNormal">@color/neutral_60</item>
        <item name="iconTint">@color/neutral_60</item>
        <item name="android:fontFamily">@font/axiforma_medium</item>
        <!--Search-->
        <item name="android:editTextColor">@color/neutral_60</item>
        <item name="android:textColorHint">@color/neutral_60</item>
    </style>
    <style name="ActionModeOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/neutral_60</item>
    </style>
    <style name="AnnotationToolbarTheme" parent="PTAnnotationToolbarTheme">
        <item name="colorBackground">@color/white</item>
        <item name="iconColor">@color/neutral_60</item>
        <item name="dividerColor">@color/neutral_60</item>
        <item name="textColor">@color/color_primary</item>
    </style>
    <style name="ToolbarStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="BottomBarTheme" parent="PTBottomBarTheme">
        <item name="colorBackground">@color/white</item>
        <item name="iconColor">@color/neutral_60</item>
        <item name="selectedIconColor">@color/neutral_60</item>
        <item name="selectedBackgroundColor">@color/neutral_20</item>
    </style>
    <style name="ToolbarButtonNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:tint">@color/neutral_60</item>
        <item name="iconColor">@color/neutral_60</item>
    </style>
    <style name="ToolbarSwitcherButtonTheme" parent="PTToolbarSwitcherButtonTheme">
        <item name="textColor">@color/neutral_60</item>
        <item name="iconColor">@color/neutral_60</item>
    </style>
</resources>